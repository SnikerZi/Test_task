<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="telda.restservice.RegionMapper">

    <resultMap id="ResultMap" type="telda.restservice.RegionMapper">
        <id column="id" property="ID" jdbcType="INTEGER"/>
        <result column="name" property="Region_Name" jdbcType="VARCHAR"/>
        <result column="short_name" property="Region_Short_Same" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="getAll" resultMap="ResultMap" >
        select * from region
    </select>

    <select id="get" resultMap="ResultMap" resultType="telda.restservice.Region">
        select * from region where id = #{id}
    </select>

    <update id="update">
        update region
        set <if test="name != null" >name = #{name}</if>
        set <if test="short_name != null" >short_name = #{short_name}</if>
        where
        id = #{id}

    </update>

    <delete id="delete">
        delete from region where id = #{id}
    </delete>

</mapper>